@using AppleStore.Models.Catalog
@model AppleStore.Models.Catalog.ProductDetailModel
@{
    ViewBag.Title = "Detail";
}
<div class="container">
    <div class="row py-3">
        <a asp-controller="Catalog" asp-action="index" class="black">< Back to catalog</a>
    </div>
    <div class="row align-items-center py-2">
        <div class="col-6">
               <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">

                        @{ int i = 0;
                            foreach (var asset in @Model.Images)
                            {
                                if (i == 0)
                                {
                                    <div class="carousel-item mw-100 active">
                                        <div class="c-item">
                                            <img class="d-block w-100 mh-100" 
                                                 data-src="@asset.Url" 
                                                 alt="@asset.AltText" src="@asset.Url" 
                                                 data-holder-rendered="true">
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item mw-100">
                                        <div class="c-item">
                                            <img class="d-block w-100 mh-100" 
                                                 data-src="@asset.Url" alt="@asset.AltText" 
                                                 src="@asset.Url" data-holder-rendered="true">
                                        </div>
                                    </div>
                                }
                                i++;
                            }
                        }

                    </div>

                    <a class="carousel-control-prev" href="#carouselExampleControls" 
                       role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" 
                       role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
        </div>

        <div class="col-6 py-4">
            <h2>@Model.Name</h2>
            <hr />
            <p>Color: @Model.Color </p>
            <p>Country: @Model.Country </p>
            <p>Parameters: @Model.Parameters</p>
            <p>Weight: @Model.Weight g</p>
            <p>Guarantee: @Model.Guarantee months</p>
            <p>Description: @Model.Description</p>
            <hr />
            <p>Price:<span class="display-5"> @Model.Price $</span></p>
            <hr />
            <button class="btn btn-primary px-5">Buy</button>
        </div>
    </div>
</div>
